<% include ../partials/header.ejs %>



  <div class="carousel slide carousel-fade" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
      </div>
      <div class="item">
      </div>
      <div class="item">
      </div>
    </div>
  </div>
<main class="container">
<h1>Players</h1>

    <% if (user) { %>
<a href="/players/add" class="btn btn-info">Add a New Player</a>
    <% } %>

<br>
<table class="table table-striped table-hover table table-condensed">
  <tr><th class="active">Team</th><th>PlayerName</th><th class="active">Position</th><th>PlayerNumber</th>
      <% if (user) { %>
    <th>Actions</th>
      <% } %>

  </tr>
</br>
    <% for (var i = 0; i < players.length; i++) { %>
  <tr>
    <td><%= players[i].Team %></td>
    <td><%= players[i].PlayerName %></td>
    <td><%= players[i].BattingPosition %></td>
    <td><%= players[i].PlayerNumber %></td>
      <% if (user) { %>
    <td>
      <a href="/players/<%= players[i]._id %>" class="btn btn-primary">Edit</a>
      <a href="/players/delete/<%= players[i]._id %>" class="btn btn-danger confirmation">Delete</a>
    </td>
      <% } %>
  </tr>
    <% } %>

</table>

</main>
<% include ../partials/footer.ejs %>